@import "../../lib//weui.wxss";
.setting_page{
  height: 100%;
  color: #303133;
  background-color: #f8f8f8;
}
.page_top{
  width: 100%;
  height: 300rpx;
  background: linear-gradient(to right, #409EFF , #1988fb);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: bolder;
}
.page_top text{
  font-size: 24rpx;
  font-weight: normal;
}
.page_top_img{
  background-color: #fff;
  border-radius: 16rpx;
  width: 100rpx;
  height: 100rpx;
  border: 2rpx solid #fff;
}
.page_main_hover{
  background-color: #DCDFE6;
}
.iconfont{
  font-size: 40rpx;
  margin-right: 10rpx;
}
.icon-decoration_fill{
  color: crimson
}
.icon-unlock_fill{
  color: coral;
}
.icon-businesscard_fill{
  color: forestgreen
}