<view class="page">
  <form class="weui-cells weui-cells_form page_login_form" bindsubmit="loginFormSubmit">
    <view class="weui-cell">
      <view class="weui-cell__hd">
        <label class="weui-label">账号：</label>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" bindconfirm="bindConfirmAccount" value="{{account}}" type="text" name="account" confirm-type="next" focus="{{accountInputFocus}}" />
      </view>
    </view>
    <view class="weui-cell">
      <view class="weui-cell__hd">
        <label class="weui-input">密码：</label>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" password name="password" value="{{password}}" type="text" confirm-type="go" focus="{{passwordInputFocus}}" />
      </view>
    </view>
    <view class="weui-cell">
      <button type="primary" class="page_form_submit" hover-class="other-button-hover" formType="submit">确认绑定</button>
    </view>
  </form>
