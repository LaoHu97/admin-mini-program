.header{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  font-size: 32rpx;
  background-color: #409EFF;
  display: flex;
  justify-content: space-between;
}
.header_main{
  width: 100%;
}
.header_search{
  padding-left: 20rpx;
}
.header_search_hover{
  color: #ccc;
}
.iconfont{
  margin-right: 5rpx;
}
.bottom_main .bottom_main_button_hover{
  background-color: #1988fb;
}
.select_date_title{
  font-size: 34rpx;
  line-height: 100rpx;
  background-color: #F2F6FC;
  display: block;
  padding-left: 20rpx;
}
.select_date_picker{
  width: 240rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #606266;
}
.select_date{
  display: flex;
  justify-content: space-around;
  margin: 20rpx 0;
}
.bottom_main{
  padding: 20rpx;
}
.bottom_main button{
  margin-top: 20rpx;
  font-size: 38rpx;
}
.header_count{
  width: 95%;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  border-radius: 8rpx;
}
.header_count_left{
  display: flex;
  flex-direction: column;
  padding: 50rpx 0;
  text-align: center;
  line-height: 1.5;
}
.header_count_amount{
  font-size: 34rpx;
  color: #409EFF;
  font-weight: bolder;
}
.header_count_title{
  font-size: 28rpx;
}
.page_list{
  background-color: #fff;
  width: 95%;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
}
.page_list_scroll{
  width: 100%;
}
.list{
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #F2F6FC;
  height: 120rpx;
}
.list_left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.list_left_text{
  text-align: left;
}
.list_left_text_weixin:nth-child(1){
  font-size: 32rpx;
}
.list_left_text_weixin:nth-child(2){
  font-size: 28rpx;
  color: #C0C4CC;
}
.list_left .iconfont{
  font-size: 64rpx;
  color: #2C8E34;
  margin: 0 20rpx;
}
.list_right{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.list_right .iconfont{
  color: #E4E7ED
}
.list_hover_class{
  background: #E4E7ED;
}
.list_right{
  font-weight: normal;
  font-size: 28rpx;
}
.list_right text{
  color: #f00;
  font-size: 36rpx;
  font-weight: bolder;
}
/**index.wxss**/
.swiper-tab{
	width: 100%;
  line-height: 100rpx;
  display: flex;
  justify-content: space-around;
  background-color: #fff;
}
.swiper-tab-list{  
  font-size: 28rpx;
  width: 50%;
  color: #909399;
  text-align: center;
  border-bottom: 6rpx solid #EBEEF5;
}
.on{
  color: #409EFF;
  border-bottom: 6rpx solid #409EFF;
}
 
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }
.swiper-box view{
	text-align: center;
}
.picker{
  padding-right: 20rpx;
}
.picker_hover{
  color: #ccc;
}
.page_list_else{
  font-size: 32rpx;
  text-align: center;
  line-height: 5;
}
.load_done{
  font-size: 28rpx;
  text-align: center;
  line-height: 5;
}