.tooltip {
  position: relative;
  display: inline-block;
  border-bottom: 1px dotted black;
}

.tooltiptext {
  border: 1rpx solid #ccc;
  color: #909399;
  background-color: #fff;
  line-height: 1.5;
  font-size: 24rpx;
  border-radius: 8rpx;
  z-index: 1;
  position: absolute;
  top: -120rpx;
  left: -40rpx;
  width: 250rpx;
  text-align: left;
  padding: 0 10rpx;
  height: 72rpx;
}
.tooltiptext:before {
   content:"";
   position: absolute;
   left: 46rpx;
   top: 72rpx;
   width: 0;
   height: 0;
   border-left: 10rpx solid transparent;
   border-top: 16rpx solid #ccc;
   border-right: 10rpx solid transparent;
}
.main{
  display: inline;
  position: relative;
}